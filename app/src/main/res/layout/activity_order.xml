<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Order">

    <TextView
        android:id="@+id/cashierNameLabel2"
        android:layout_width="169dp"
        android:layout_height="24dp"
        android:text="Cashier Name: Juan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/chargeButton"
        android:layout_width="282dp"
        android:layout_height="74dp"
        android:text="Button"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <ScrollView
        android:layout_width="323dp"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <ImageView
        android:id="@+id/smileyLogo"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/smiley" />

    <TextView
        android:id="@+id/customerQuestion"
        android:layout_width="310dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:text="This is your customer's order list"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#B65B05"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/border"
        android:layout_width="399dp"
        android:layout_height="96dp"
        android:layout_marginTop="695dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lower_border" />

    <ImageButton
        android:id="@+id/creditButton"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="673dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="38dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/credit_inactive" />

    <ImageButton
        android:id="@+id/productButton"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="673dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="38dp"
        android:background="@null"
        android:clickable="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product_inactive" />


    <ImageButton
        android:id="@+id/basketButton"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="47dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basket_active" />

    <TextView
        android:id="@+id/creditListLabel"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="751dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Sales History"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productButtonLabel"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="751dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Products"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderListLabel"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="751dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Order List"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>